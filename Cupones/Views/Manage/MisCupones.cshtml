@model IEnumerable<Cupones.Models.CouponCodeModel>

@{
    ViewBag.Title = "MisCupones";
}

<h2>MisCupones</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.coupon.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.coupon.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @if (item.status) { 
                @Html.Encode("Redimido")
            }
            else
            {
                @Html.Encode("Sin Redimir")
            }
            
        </td>
    </tr>
}

</table>
